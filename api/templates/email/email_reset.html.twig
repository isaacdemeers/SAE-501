{% extends 'email/email_base.html.twig' %}

{% block content %}
<tr>
    <td style="background-color: #ffffff; padding: 40px 30px; border-radius: 6px; box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);">
        <h1 style="font-size: 24px; font-weight: bold; color: #0f172a; text-align: center; margin-bottom: 20px;">
           Demande de réinitialisation de mot de passe
        </h1>
        <p style="font-size: 16px; line-height: 24px; color: #4a5568; text-align: center; margin-bottom: 30px;">
            Cliquez ci-dessous pour réinitialiser votre mot de passe.
        </p>
        <table cellpadding="0" cellspacing="0" style="margin: 0 auto">
            <tr>
                <td align="center" bgcolor="#0F172A" style="padding: 12px 24px; border-radius: 4px">
                    <a href="{{ resetLink }}" target="_blank" style="color: #ffffff; font-size: 16px; text-decoration: none; display: inline-block;">
                        réinitialiser mon mot de passe
                    </a>
                </td>
            </tr>
        </table>
    </td>
</tr>
{% endblock %}